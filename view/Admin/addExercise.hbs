<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Exercise</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #343a40;
            color: #fff;
        }

        .form-control {
            background-color: #495057;
            color: #fff;
            border-color: #495057;
        }

        .form-control:focus {
            background-color: #495057;
            color: #fff;
            border-color: #fff;
            box-shadow: none;
        }

        .form-label {
            color: #fff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0062cc;
            border-color: #005cbf;
        }

        .form-floating input[type=text]:focus:not([readonly]),
        .form-floating input[type=number]:focus:not([readonly]),
        .form-floating textarea:focus:not([readonly]) {
            padding-top: 1.625rem;
            padding-bottom: 0.375rem;
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

        .form-floating input[type=text]:not(:placeholder-shown),
        .form-floating input[type=number]:not(:placeholder-shown),
        .form-floating textarea:not(:placeholder-shown) {
            padding-top: 1.625rem;
            padding-bottom: 0.375rem;
        }

        .form-floating label {
            margin-top: -0.5rem;
            font-size: 0.875rem;
            color: #fff;
        }

        .form-floating input[type=text]:focus:not(:placeholder-shown),
        .form-floating input[type=number]:focus:not(:placeholder-shown),
        .form-floating textarea:focus:not(:placeholder-shown) {
            font-size: 0.75rem;
        }

        .add-exec-head {
            border: 2px solid black;
            color: white;
            font-weight: bolder;
            border-radius: 10px;
            background-color: black;
        }
    </style>
</head>

<body>
    <header class="text-center add-exec-head">
        <h1>Admin-Panel (Add-Exercise)</h1>
    </header>
    <div class="container d-flex justify-content-center align-items-center mt-5 " style="color: black;">
        <div class="text-center">
            <button class="text-center btn btn-primary" id="submit">Done</button>
            <button class="btn btn-success" id="add">Add</button>
        </div>
    </div>
    <div class="container">
        <form>
            <div id="form-container" class="row gy-3 mt-5" style="color: black;">
                <div class="col-lg-4">
                    <div class="card shadow-lg ">
                        <div class="card-body">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Exercise name">
                                <label for="floatingInput" class="form-label">Exercise Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="bodyPart Name">
                                <label for="floatingInput" class="form-label">bodyPart</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="file" class="form-control" id="floatingInput" placeholder="gifUrl">
                                <label for="floatingInput" class="form-label">gifUrl</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="equipment">
                                <label for="floatingInput" class="form-label">equipment</label>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
<script src="/static/Admin/js/addexec.js"></script>

</html>